# Example Environment Configuration for MCP Testing
# Copy this to .env in project root and update with your credentials

# Confluence API Configuration for Testing
CONFLUENCE_API_BASE_URL=https://your-site.atlassian.net
CONFLUENCE_API_USERNAME=your-email@example.com  
CONFLUENCE_API_TOKEN=your-api-token-here

# Optional: Test-specific configuration
TEST_CONFLUENCE_SPACE_KEY=TESTSPACE
TEST_PAGE_LIMIT=10
TEST_TIMEOUT_SECONDS=30

# Logging levels for testing
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG
LOGGING_LEVEL_MCP=TRACE

# Test server configuration
SERVER_PORT=8081
SPRING_PROFILES_ACTIVE=test

# Performance testing configuration
TEST_MAX_RESPONSE_TIME_MS=5000
TEST_CONCURRENT_REQUESTS=5